<?xml version="1.0"?>

<component name="org.osivia.opentoutatice.web.mode.layouts">

	<require>fr.toutatice.ecm.platform.web.document.forms.layouts.webapp</require>
	<require>org.osivia.opentoutatice.web.mode.widgets</require>

	<extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
		point="layouts">

		<layout name="layout@PortalSite-create">
			<templates>
				<template mode="any">/layouts/layout_default_template.xhtml
				</template>
			</templates>
			<rows>
				<row>
					<widget>ttc_title</widget>
				</row>
				<row>
					<widget>description</widget>
				</row>
				<row>
					<widget>picture</widget>
				</row>
				<row>
					<widget>ottc_content</widget>
				</row>
				<row>
					<widget>enable_weburl</widget>
				</row>
			</rows>
		</layout>
		
		<layout name="layout@PortalSite-edit">
			<templates>
				<template mode="any">/layouts/layout_default_template.xhtml
				</template>
			</templates>
			<rows>
				<row>
					<widget>ttc_title</widget>
				</row>
				<row>
					<widget>description</widget>
				</row>
				<row>
					<widget>picture</widget>
				</row>
				<row>
					<widget>ottc_content</widget>
				</row>
				<row>
					<widget>enable_weburl</widget>
				</row>
			</rows>
		</layout>
		
		<!-- To use in generic injection -->
		<layout name="toutatice_webUrl">
            <templates>
                <template mode="any">/layouts/layout_default_template.xhtml
                </template>
            </templates>
            <rows>
                <row>
                    <widget>ottc_weburl</widget>
                </row>
            </rows>

        </layout>

	</extension>

</component>
